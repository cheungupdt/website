<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">      
    <title>{% if title %}{{ title }} - {% endif %}{{ site.title }}</title>      
    <meta name="description" content="{{ description or site.description }}">   
    <link rel="stylesheet" href="/assets/css/main.css">
    <link rel="stylesheet" href="/assets/css/components.css">
    <link rel="stylesheet" href="/assets/css/diagram.css">
    <link rel="stylesheet" href="/assets/css/expertise.css">

    <!-- Conditionally load additional CSS based on page -->
    {% if page.url == '/contact/' or page.url == '/contact/collaboration/' %}   
    <link rel="stylesheet" href="/assets/css/contact.css">
    {% endif %}

    {% if page.url == '/showcase/' or (page.url and '/showcase/' in page.url) %}
    <link rel="stylesheet" href="/assets/css/showcase.css">
    {% endif %}

    <link rel="alternate" type="application/rss+xml" title="{{ site.title }} - RSS Feed" href="/feed.xml">
    
    <!-- Preload critical resources -->
    <link rel="preload" href="/assets/js/chatbot.js" as="script">
    <link rel="preload" href="/assets/css/showcase.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
</head>
<body>
    <a href="#main" class="skip-link">Skip to main content</a>

    <header class="header">
        <div class="container">
            <div class="header-content">
                <a href="/" class="logo">{{ site.title }}</a>
                <nav class="nav">
                    {% if page.url == '/' %}
                        {# Home page - manually specify the exact items in order #}
                        <a href="/" class="nav-link">Home</a>
                        <a href="/blog/" class="nav-link">Blog</a>
                        <a href="/projects/" class="nav-link">Projects</a>
                        <a href="/achievements/" class="nav-link">Achievements</a>
                        <a href="/leadership/" class="nav-link">Leadership</a>
                        <a href="/speaking/" class="nav-link">Speaking</a>
                        <a href="/diagrams/" class="nav-link">Diagrams</a>
                        <a href="/showcase/" class="nav-link">Showcase</a>
                        <a href="/contact/" class="nav-link">Contact</a>
                    {% else %}
                        {# All other pages - show full navigation #}
                        {% for item in site.navigation %}
                            <a href="{{ item.url }}" class="nav-link">{{ item.name }}</a>
                        {% endfor %}
                    {% endif %}    
                    <a href="/rss/" class="nav-link rss-link" title="RSS Feed"> 
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 11a9 9 0 0 1 9 9v1.5a1.5 1.5 0 0 1-3 0V20a7 7 0 0 0-7-7v-1.5a1.5 1.5 0 0 1 3 0V11Z" fill="currentColor"/>
                        <path d="M4 4.5A1.5 1.5 0 0 1 5.5 3v1.5a10.5 10.5 0 0 1 10.5 10.5v1.5a1.5 1.5 0 0 1-3 0V15A7.5 7.5 0 0 0 5.5 7.5V6A1.5 1.5 0 0 1 4 4.5Z" fill="currentColor"/>
                        <circle cx="6" cy="18" r="1.5" fill="currentColor"/>
                        </svg>
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <main id="main" class="main">
        <div class="container">
            {{ content | safe }}
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <p>&copy; {{ "now" | date("YYYY") }} {{ site.author }}. All rights reserved.</p>
                <div class="footer-links">
                    <a href="/rss/" class="footer-link">RSS Feed</a>
                    {% if site.social %}
                        {% if site.social.linkedin %}
                        <a href="{{ site.social.linkedin }}" class="footer-link">LinkedIn</a>
                        {% endif %}
                        {% if site.social.github %}
                        <a href="{{ site.social.github }}" class="footer-link">GitHub</a>
                        {% endif %}
                        {% if site.social.twitter %}
                        <a href="{{ site.social.twitter }}" class="footer-link">Twitter</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </footer>

    <!-- Chatbot - Always loaded for global access -->
    {% include "components/chatbot.njk" %}

    <!-- Core Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/assets/js/diagrams.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/mermaid/dist/mermaid.min.js"></script>
    <script src="/assets/js/lightbox.js"></script>
    <script src="/assets/js/navigation.js"></script>

    <!-- Conditionally load additional scripts based on page -->
    {% if page.url == '/contact/' or page.url == '/contact/collaboration/' %}   
    <script src="/assets/js/contact-form.js"></script>
    {% endif %}

    {% if page.url == '/showcase/' or (page.url and '/showcase/' in page.url) %}
    <script src="/assets/js/showcase.js"></script>
    <script src="/assets/js/parallax.js"></script>
    <script src="/assets/js/voice-synthesis.js"></script>
    {% endif %}

    <!-- Chatbot script - Always loaded -->
    <script src="/assets/js/chatbot.js"></script>

    <!-- Performance monitoring script -->
    <script>
        // Simple performance monitoring
        window.addEventListener('load', function() {
            if ('performance' in window) {
                const perfData = window.performance.timing;
                const pageLoadTime = perfData.loadEventEnd - perfData.navigationStart;
                
                // Ensure we have a valid time
                if (pageLoadTime > 0) {
                    console.log('Page load time:', pageLoadTime + 'ms');
                    
                    // Track performance metrics (you can send this to analytics)
                    if (window.gtag) {
                        gtag('event', 'page_load_time', {
                            'value': pageLoadTime,
                            'custom_parameter': pageLoadTime
                        });
                    }
                }
            }
        });

        // Service Worker registration for PWA capabilities
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', function() {
                navigator.serviceWorker.register('/sw.js')
                    .then(function(registration) {
                        console.log('ServiceWorker registration successful');
                    })
                    .catch(function(err) {
                        console.log('ServiceWorker registration failed: ', err);
                    });
            });
        }
    </script>

    <!-- Error tracking script -->
    <script>
        window.addEventListener('error', function(e) {
            console.error('JavaScript error:', e.error);
            // You can send this to an error tracking service
        });

        // Handle unhandled promise rejections
        window.addEventListener('unhandledrejection', function(e) {
            console.error('Unhandled promise rejection:', e.reason);
        });
    </script>
</body>
</html>